<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Portal de notícias</title>

	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
		integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<!-- favicon -->
	<link rel="shortcut icon" href="../../public/images/favicon.ico" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>

	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
					aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<p class="logo">New<span>S.</span></p>
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><a class="home" href="/">HOME</a></li>
				</ul>
			</div>
		</div>
	</nav>


	<div class="container">
		<div class="container-fluid">
		<div class="row">
			<div class="col-md-8">
				<div class="noticia_wrapper">
					<a href="noticia?id_noticia=<%= noticias[0].id_noticia %>" class="noticia_titulo">
						<%= noticias[0].titulo %>
					</a>
					<span class="noticia_data">
						<%= noticias[0].data_criacao %>
					</span>
					<span class="noticia_autor">
						<%= noticias[0].autor %>
					</span>
					<br />
					<p class="noticia_resumo">
						<%= noticias[0].resumo %>
					</p>
				</div>
			</div>

			<div class="col-md-4">
				<div class="noticia_wrapper">
					<a href="noticia?id_noticia=<%= noticias[1].id_noticia %>" class="noticia_titulo">
						<%= noticias[1].titulo %>
					</a>
					<span class="noticia_data">
						<%= noticias[1].data_criacao %>
					</span>
					<span class="noticia_autor">
						<%= noticias[1].autor %>
					</span>

					<br />
					<p class="noticia_resumo">
						<%= noticias[1].resumo %>
					</p>
				</div>
			</div>
		</div>

		<div class="row">

			<% for(var i=2; i < noticias.length; i++) { %>
				<div class="col-md-4">
					<div class="noticia_wrapper">
						<a href="noticia?id_noticia=<%= noticias[i].id_noticia %>" class="noticia_titulo">
							<%= noticias[i].titulo %>
						</a>
						<span class="noticia_data">
							<%= noticias[i].data_criacao %>
						</span>
						<span class="noticia_autor">
							<%= noticias[i].autor %>
						</span>
						<br />
						<p class="noticia_resumo">
							<%= noticias[i].resumo %>
						</p>
					</div>
				</div>
			<% } %>
			


		</div>
		<div class="row ver_mais">
			<a href="noticias"><button type="button" class="btn-news">Ver todas as notícias</button></a>
		</div>
	</div>
	</div>

	

	</div>

	<footer>
		<p class="text-footer">Desenvolvido por  <span>Francisco Henrique</span></p>

	</footer>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>

</body>

</html>